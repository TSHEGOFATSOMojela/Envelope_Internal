<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Envelope_Internal.Indigent.Accepted.LivingConditions">
    <ScrollView HorizontalOptions="FillAndExpand">

        <StackLayout Orientation="Vertical">

            <StackLayout Orientation="Vertical">
                <Label TextColor="Black" Margin="8" Text="Application Reference No:" />
                <Label TextColor="Black" Margin="10"  HorizontalOptions="Start" Text="{Binding indigentApplicationDetails.originalApplicantDetail.residentialDetail.ownership}"/>
            </StackLayout>

            <BoxView HeightRequest="1" BackgroundColor="Black"/>

            <StackLayout Orientation="Vertical">
                <Label TextColor="Black" Margin="8" Text="EMM Account Number:"/>
                <Label TextColor="Black" Margin="10"  HorizontalOptions="Start" Text="{Binding indigentApplicationDetails.originalApplicantDetail.residentialDetail.propertyKind}"/>
            </StackLayout>

            <BoxView HeightRequest="1" BackgroundColor="Black"/>

            <StackLayout Orientation="Vertical">
                <Label TextColor="Black" Margin="8" Text="Application Type:"/>
                <Label TextColor="Black" Margin="10" HorizontalOptions="Start"  Text="{Binding indigentApplicationDetails.originalApplicantDetail.residentialDetail.innerSpace}"/>
            </StackLayout>

            <BoxView HeightRequest="1" BackgroundColor="Black"/>
            <StackLayout Orientation="Vertical">
                <Label TextColor="Black" Margin="8" Text="Indigent Application Type:"/>
                <Label TextColor="Black" Margin="10"  HorizontalOptions="Start"  Text="{Binding indigentApplicationDetails.originalApplicantDetail.residentialDetail.outerSpace}"/>
            </StackLayout>
     
          
         </StackLayout>
        </ScrollView>
</ContentPage>