<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Envelope_Internal"
             x:Class="Envelope_Internal.MainPage"
             BackgroundColor="White">

    <ScrollView>

        <StackLayout>

            <Image  Margin="20" VerticalOptions="Start" HeightRequest="220" WidthRequest="220"  Source="Ekurhulen.png"/>

            
            <Entry x:Name="username" Placeholder="Username" HorizontalTextAlignment="Start"/>

            <Entry x:Name="password" IsPassword="True" Placeholder="Password" HorizontalTextAlignment="Start"/>

            <Label Text="Forgot password?" TextColor="Pink" HorizontalTextAlignment="Start"/>

            <Button x:Name="login" Text="Login" Clicked="login_Clicked" BackgroundColor="Gray" TextColor="White" MinimumWidthRequest="300"/>
            <Label Text="New? Create Account" TextColor="Gray" HorizontalTextAlignment="Center"/>







        </StackLayout>
        
        
    </ScrollView>

</ContentPage>
